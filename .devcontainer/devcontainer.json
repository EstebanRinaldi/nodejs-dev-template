{
  "name": "NodeJS Development Environment",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "nodejs",
  "workspaceFolder": "/workspace",
  // Set *default* container specific settings.json values on container create.
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "js/ts.implicitProjectConfig.checkJs": true,
    "javascript.preferences.importModuleSpecifierEnding": "js",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [
      80
    ],
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      ".devcontainer/": true
    },
    "todohighlight.keywords": [
      {
        "text": "TODO:",
        "color": "black",
        "backgroundColor": "#FFD700",
        "overviewRulerColor": "#FFD700",
        "fontWeight": "bold",
        "overviewRulerLane": "full"
      },
      {
        "text": "FIXME:",
        "color": "black",
        "backgroundColor": "#FF4500",
        "overviewRulerColor": "#FF4500",
        "fontWeight": "bold",
        "overviewRulerLane": "full"
      },
      {
        "text": "DEBUG:",
        "color": "black",
        "backgroundColor": "#CD853F",
        "overviewRulerColor": "#CD853F",
        "fontWeight": "bold",
        "overviewRulerLane": "full"
      },
      {
        "text": "NOTE:",
        "color": "black",
        "backgroundColor": "#6495ED",
        "overviewRulerColor": "#6495ED",
        "fontWeight": "bold",
        "overviewRulerLane": "full"
      },
      {
        "text": "HERE:",
        "color": "black",
        "backgroundColor": "#008080",
        "overviewRulerColor": "#008080",
        "fontWeight": "bold",
        "overviewRulerLane": "full"
      }
    ],
    "todohighlight.include": [
      "**/*.md",
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.html",
      "**/*.php",
      "**/*.css",
      "**/*.scss"
    ]
  },
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "dbaeumer.vscode-eslint",
    "mtxr.sqltools",
    "mtxr.sqltools-driver-pg",
    "mtxr.sqltools-driver-mysql",
    "mtxr.sqltools-driver-mssql",
    "ms-mssql.mssql",
    "mikestead.dotenv",
    "CoenraadS.bracket-pair-colorizer-2",
    // "aaron-bond.better-comments",
    "christian-kohler.path-intellisense",
    "yzhang.markdown-all-in-one",
    "bierner.markdown-preview-github-styles",
    "EditorConfig.EditorConfig",
    "oouo-diogo-perdigao.docthis",
    "Orta.vscode-jest",
    "rangav.vscode-thunder-client",
    "xabikos.javascriptsnippets",
    "esbenp.prettier-vscode",
    "wallabyjs.quokka-vscode",
    "eamodio.gitlens",
    "gamunu.vscode-yarn",
    "hediet.vscode-drawio",
    "wayou.vscode-todo-highlight"
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [3000],
  // Use 'portsAttributes' to set default properties for specific forwarded ports. More info: https://code.visualstudio.com/docs/remote/devcontainerjson-reference.
  "portsAttributes": {
    "3000": {
      "label": "Server Default",
      "onAutoForward": "notify"
    }
  }
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "yarn dev",
  // Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
  //"remoteUser": "user-name-goes-here"
}
